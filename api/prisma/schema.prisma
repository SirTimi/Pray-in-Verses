generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPER_ADMIN
  EDITOR
  MODERATOR
  USER
}

/// NEW: account lifecycle for moderation
enum UserStatus {
  ACTIVE
  SUSPENDED
}

model User {
  id           String  @id @default(cuid())
  email        String  @unique
  passwordHash String
  displayName  String?
  role         Role    @default(USER)

  /// NEW: moderation/suspension fields
  status          UserStatus @default(ACTIVE)
  suspendedAt     DateTime?
  suspendedReason String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // existing
  savedPrayers SavedPrayer[]
  journals     Journal[]

  // NEW back-relations for curated workflow
  curatedCreated CuratedPrayer[] @relation("CuratedCreatedBy")
  curatedUpdated CuratedPrayer[] @relation("CuratedUpdatedBy")

  // Back-relations for the prayer wall features:
  prayerRequests  PrayerRequest[] // requests this user created
  prayerLikes     PrayerLike[] // requests this user liked
  prayerBookmarks PrayerBookmark[] // requests this user bookmarked
  prayerComments  PrayerComment[] // comments this user posted
  prayerPoints    PrayerPoint[]
  passwordResets  PasswordReset[]

  createdNotifications Notification[]     @relation("UserCreatedNotifications")
  inboxNotifications   UserNotification[] @relation("UserInboxNotifications")

  @@index([status]) // helpful for admin dashboards
}

model SavedPrayer {
  id              String   @id @default(cuid())
  userId          String
  curatedPrayerId String
  pointIndex      Int?
  createdAt       DateTime @default(now())

  // relations
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  curatedPrayer CuratedPrayer @relation(fields: [curatedPrayerId], references: [id], onDelete: Cascade)

  @@unique([userId, curatedPrayerId, pointIndex]) // a user can save a curated prayer only once
  @@index([userId, createdAt])
}

model Journal {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  body      String
  mood      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, createdAt])
}

model AdminInvite {
  id         String    @id @default(cuid())
  email      String
  role       Role
  token      String    @unique
  invitedBy  String
  acceptedAt DateTime?
  expiresAt  DateTime
  createdAt  DateTime  @default(now())

  @@index([email])
}

enum PublishState {
  DRAFT
  REVIEW
  PUBLISHED
  ARCHIVED
}

model CuratedPrayer {
  id            String   @id @default(cuid())
  book          String
  chapter       Int
  verse         Int
  theme         String
  scriptureText String
  insight       String
  prayerPoints  String[]
  closing       String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // workflow
  state       PublishState @default(DRAFT)
  createdById String? // <-- nullable for now
  updatedById String? // <-- nullable for now
  publishedAt DateTime?

  createdBy User?         @relation("CuratedCreatedBy", fields: [createdById], references: [id], onDelete: Restrict)
  updatedBy User?         @relation("CuratedUpdatedBy", fields: [updatedById], references: [id], onDelete: SetNull)
  savedBy   SavedPrayer[]

  @@unique([book, chapter, verse])
}

model PrayerRequest {
  id          String  @id @default(cuid())
  title       String
  description String
  category    String
  urgent      Boolean @default(false)
  anonymous   Boolean @default(false)

  createdBy   User   @relation(fields: [createdById], references: [id])
  createdById String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  likes     PrayerLike[]
  bookmarks PrayerBookmark[]
  comments  PrayerComment[]

  @@index([createdById])
}

model PrayerLike {
  id        String        @id @default(cuid())
  user      User          @relation(fields: [userId], references: [id])
  userId    String
  request   PrayerRequest @relation(fields: [requestId], references: [id])
  requestId String

  createdAt DateTime @default(now())

  // One like per user per request
  @@unique([userId, requestId])
  @@index([userId])
  @@index([requestId])
}

model PrayerBookmark {
  id        String        @id @default(cuid())
  user      User          @relation(fields: [userId], references: [id])
  userId    String
  request   PrayerRequest @relation(fields: [requestId], references: [id])
  requestId String

  createdAt DateTime @default(now())

  // One bookmark per user per request
  @@unique([userId, requestId])
  @@index([userId])
  @@index([requestId])
}

model PrayerComment {
  id        String        @id @default(cuid())
  body      String
  user      User          @relation(fields: [userId], references: [id])
  userId    String
  request   PrayerRequest @relation(fields: [requestId], references: [id])
  requestId String

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([requestId])
}

enum PrayerStatus {
  OPEN
  ANSWERED
}

model PrayerPoint {
  id         String       @id @default(cuid())
  userId     String
  user       User         @relation(fields: [userId], references: [id])
  title      String
  body       String
  status     PrayerStatus @default(OPEN)
  answeredAt DateTime?
  tags       String[]     @default([])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PasswordReset {
  id        String    @id @default(cuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  tokenHash String
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  @@index([userId])
  @@index([tokenHash])
}

model Donation {
  id         String    @id @default(cuid())
  reference  String    @unique
  email      String
  amountNGN  Int // NOTE: currently stored as Naira integer; consider using kobo if you need exact cents-equivalent.
  currency   String    @default("NGN")
  status     String    @default("initialized") // initialized | pending | success | failed | abandoned
  metadata   Json?
  gatewayRaw Json?
  createdAt  DateTime  @default(now())
  paidAt     DateTime?
}

// --- NEW ---
enum NotificationAudience {
  ALL
  ROLE
  USER
}

model Notification {
  id            String               @id @default(cuid())
  title         String
  body          String
  link          String?
  createdById   String
  // ðŸ‘‡ explicit relation name
  createdBy     User                 @relation("UserCreatedNotifications", fields: [createdById], references: [id])
  audience      NotificationAudience @default(ALL)
  roles         Role[]               @default([])
  targetUserIds String[]             @default([])
  createdAt     DateTime             @default(now())

  // reverse
  deliveries UserNotification[]
}

model UserNotification {
  id             String       @id @default(cuid())
  userId         String
  notificationId String
  // ðŸ‘‡ explicit relation name
  user           User         @relation("UserInboxNotifications", fields: [userId], references: [id], onDelete: Cascade)
  notification   Notification @relation(fields: [notificationId], references: [id], onDelete: Cascade)

  readAt    DateTime?
  createdAt DateTime  @default(now())

  @@unique([userId, notificationId])
  @@index([userId, createdAt])
}
